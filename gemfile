# Gemfile

# RubyGems kaynağı
source "https://rubygems.org"

# Jekyll ve GitHub Pages için temel gereksinimler
# 'github-pages' gem'i, GitHub Pages ortamıyla uyumlu birçok Jekyll eklentisini
# ve Jekyll'in kendisini içerir. Bu, genellikle en uyumlu yoldur.
gem "github-pages", group: :jekyll_plugins

# Eğer GitHub Pages gem'ini kullanmak yerine belirli versiyonları kendiniz
# yönetmek isterseniz, yukarıdaki satırı yoruma alıp aşağıdakileri kullanabilirsiniz:
# gem "jekyll", "~> 3.9" # GitHub Pages ile uyumlu Jekyll versiyonu
# gem "jekyll-feed", "~> 0.15"
# gem "jekyll-seo-tag", "~> 2.7"
# gem "kramdown-parser-gfm", "~> 1.1" # GitHub Flavored Markdown için
# gem "webrick", "~> 1.7" # Ruby 3+ ile jekyll serve için gerekli olabilir

# Eklemek istediğiniz modern tema veya diğer eklentileri buraya ekleyebilirsiniz:
# gem "modern-jekyll-theme-adi" # Örneğin
# gem "jekyll-lunr-js-search" # İleride arama için ekleyebiliriz

# Windows kullanıcıları için platforma özgü gem'ler (gerekirse)
# gem 'wdm', '~> 0.1.1', :install_if => Gem.win_platform?

